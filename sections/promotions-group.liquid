<h2 style="text-align:{{ section.settings.title_allignment }}">{{ section.settings.title }}</h2>

{% for block in section.blocks %}
    {% if block.type == "Promotion" %}
        <h3>{{ block.settings.title }}</h3>
        {{ block.settings.image | image_url: width:500 | image_tag }}
    {% endif %}
{% endfor %}

{% schema %}
{
    "name" : "Promotion Group",
    "tag" : "section",
    "class" : "my-wrapper-class",
    "settings" : [
        {
            "type" : "text",
            "label" : "Title",
            "id" : "title"
        },
        {
            "type" : "select",
            "label" : "Title Allignment",
            "id" : "title_allignment",
            "options" : [
                {
                "value": "left",
                "label": "Left"
                },
                {
                "value": "center",
                "label": "Center"
                },
                {
                "value": "right",
                "label": "Right"
                }
            ],
            "default": "center"
        }
    ],
    "blocks" : [
        {
            "type" : "Promotion",
            "name" : "Promotion",
            "limit" : 2,
            "settings" : [
                {
                    "type" : "text",
                    "id" : "title",
                    "label" : "Title"
                },
                {
                    "type" : "image_picker",
                    "id" : "image",
                    "label" : "Image"
                }
            ]
            
        }
    ], 
    "presets" : [
        {
            "name" : "Promotion Group"
        }
    ]
}
{% endschema %}